<!DOCTYPE html>
<html ng-app="MarkerEditor">
  <head>
    <meta charset='utf-8'>
    <title>Tạo mã</title>
  </head>
  <body style="text-align: center;">
    <h1>Tạo mã</h1>

    <div ng-controller="EditCtrl">
      <p>
        <label>Mã ID:
          <input type="number" min="0" max="1023" ng-model="markerId">
        </label>
        <label> <button>In</button>
        </label>
      </p>
      <div style="text-align: center;">
        <aruco-marker marker-id="{{markerId}}" size="400px"/>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.20/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js"></script>
    <script src="../build/aruco-marker.js"></script>
    <script src="../ng-aruco-marker.js"></script>
    <script>
      var app = angular.module('MarkerEditor', ['arucoMarker']);

      app.controller('EditCtrl', function($scope) {
        $scope.markerId = Math.floor(Math.random() * 1024);
      });
    </script>
  </body>
</html>
